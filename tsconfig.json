{
   "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
         "@modules/*": ["modules/*"],
         "@shared/*": ["shared/*"],
       },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
   }
}